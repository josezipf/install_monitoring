# Configurações de PID File (Adicione na seção principal)
PidFile=/run/zabbix/zabbix_server.pid
SocketDir=/run/zabbix

# Configuração básica do Zabbix Server 7.0 para Ubuntu 24.04
DBHost=localhost
DBName={{ mysql_database }}
DBUser={{ mysql_zabbix_user }}
DBPassword={{ mysql_zabbix_password }}
DBPort=3306
ListenPort=10051

# Otimizações para MySQL
StartPollers=5
StartPollersUnreachable=1
StartPingers=2
StartTrappers=5
StartDiscoverers=1
CacheSize=32M
HistoryCacheSize=16M
TrendCacheSize=8M
ValueCacheSize=32M

# Logs (opcional)
LogFile=/var/log/zabbix/zabbix_server.log
LogFileSize=10
DebugLevel=3
